type User {
  id: ID! @id
  username: String! @unique
  password: String!
  name: String
  email: String! @unique
  bio: String
  techStack: String
  avatarURL: String
  githubURL: String
  linkedinURL: String
  portfolioURL: String
  twitterURL: String
  projects: [Project!]! @relation(name: "PersonalProjects", onDelete: CASCADE)
  starredProjects: [Project!]! @relation(name: "StarredProjects", onDelete: CASCADE)
  followers: [User!]! @relation(name: "Followers")
  following: [User!]! @relation(name: "Following")
  createdAt: DateTime! @createdAt
}

type Project {
  id: ID! @id
  postedBy: User! @relation(name: "PersonalProjects", onDelete: SET_NULL)
  starredBy: [User!]! @relation(name: "StarredProjects", onDelete: SET_NULL)
  name: String!
  private: Boolean! @default(value: false)
  status: String
  wantFeedback: Boolean @default(value: false)
  wantAssistance: Boolean @default(value: false)
  deploymentURL: String
  frontEndRepoURL: String
  backEndRepoURL: String
  likes: [Like!]!
  comments: [Comment!]!
  tags: [Tag!]!
  createdAt: DateTime! @createdAt
  lastUpdated: DateTime! @updatedAt
}

type Like {
  id: ID! @id
  project: Project!
  user: User!
}

type Comment {
  id: ID! @id
  user: User!
  text: String!
  project: Project!
  createdAt: DateTime! @createdAt
}

type Tag {
  id: ID! @id
  name: String! @unique
  projects: [Project!]!
}